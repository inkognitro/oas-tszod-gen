{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@example-outputs/*": ["./example-outputs/*"]
    },
    "lib": [
      "ES2021.String",
      "DOM"
    ],
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "src/**/*.ts",
    "example-outputs/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/templates/**",
    "example-specs/**",
    "dist/**"
  ]
}
